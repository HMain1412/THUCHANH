<div class="container mt-5">
  <h1 class="text-center"><%= data.title %></h1>
  
  <div class="card shadow-sm mt-4">
      <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Thông tin người dùng</h2>
      </div>
      <div class="card-body">
          <p><strong>ID:</strong> <%= data.user.id %></p>
          <p><strong>Tên đăng nhập:</strong> <%= data.user.username %></p>
          <p><strong>Mật khẩu:</strong> <%= data.user.password %></p>
          <p><strong>Họ và tên:</strong> <%= data.user.fullname %></p>
          <p><strong>Địa chỉ:</strong> <%= data.user.address %></p>
          <p><strong>Giới tính:</strong> <%= data.user.sex %></p>
          <p><strong>Email:</strong> <%= data.user.email %></p>
          
          <a href="/edituser/<%= data.user.id %>" class="btn btn-warning mt-3">✏️ Sửa thông tin</a>
      </div>
  </div>
</div>
